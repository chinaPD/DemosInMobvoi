<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/start_wearable_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:onClick="onStartWearableActivityClick"
        android:text="@string/start_wearable_activity"
        android:enabled="false" />

    <Button
        android:id="@+id/generate_random_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_wearable_activity"
        android:onClick="onGenerateRandomNumberClick"
        android:text="@string/generate_random_number"
        android:enabled="false" />

    <Button
        android:id="@+id/send_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/generate_random_number"
        android:onClick="onSendNumberClick"
        android:text="@string/send_number"
        android:enabled="false" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/send_number"
        android:textSize="50sp"
        android:text="\?" />

</RelativeLayout>
